{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "src/components/Home/components/Posts/Posts.tsx", "src/components/Auth/Login/LoginForm.test.tsx", "src/components/Auth/SignUp/SignUpForm.test.tsx", "src/utils/testUtils.tsx", "src/context/GlobalState.tsx"]
}
